{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "TodoRead",
      "TodoWrite",
      "Task",
      "Skill"
    ],
    "deny": [
      "Bash(git push origin main*)",
      "Bash(git push origin master*)",
      "Bash(git push --force*)",
      "Bash(rm -rf /)*",
      "Bash(rm -rf .git*)",
      "Bash(rm -rf ~*)"
    ]
  },
  "env": {
    "ANTHROPIC_MODEL": "sonnet-4.5",
    "MAX_THINKING_TOKENS": "10000"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "echo \"âœ“ C3 session started - Run tests with: python3 -m pytest tests/\"",
            "blocking": false
          }
        ]
      }
    ]
  }
}
